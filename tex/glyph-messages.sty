\IfPackageLoadedTF{glyph}
    {}
    {
        \PackageError{glyph-messages}
            {Improperly sourced}
            {This is a package internal to glyph and should only be called by glyph itself.} 
    }

\ProvidesExplPackage{glyph-messages}{2023/07/11}{0.0.1}{Messages for glyph package}

% Define custom message functions (just wrappers to underlying functions).
% as recommended by Joseph Wright: https://tex.stackexchange.com/a/246962/207967
\cs_new:Npn \glyph_fatal:n     { \msg_error:nn     {glyph} }
\cs_new:Npn \glyph_fatal:nn    { \msg_error:nnn    {glyph} }
\cs_new:Npn \glyph_fatal:nx    { \msg_error:nnx    {glyph} }
\cs_new:Npn \glyph_fatal:nxx   { \msg_error:nnxx   {glyph} }
\cs_new:Npn \glyph_error:n     { \msg_error:nn     {glyph} }
\cs_new:Npn \glyph_error:nn    { \msg_error:nnn    {glyph} }
\cs_new:Npn \glyph_error:nx    { \msg_error:nnx    {glyph} }
\cs_new:Npn \glyph_error:nxx   { \msg_error:nnxx   {glyph} }
\cs_new:Npn \glyph_warning:n   { \msg_warning:nn   {glyph} }
\cs_new:Npn \glyph_warning:nx  { \msg_warning:nnx  {glyph} }
\cs_new:Npn \glyph_warning:nxx { \msg_warning:nnxx {glyph} }
\cs_new:Npn \glyph_info:n      { \msg_info:nn      {glyph} }
\cs_new:Npn \glyph_info:nx     { \msg_info:nnx     {glyph} }
\cs_new:Npn \glyph_info:nxx    { \msg_info:nnxx    {glyph} }
\cs_new:Npn \glyph_trace:n     { \msg_trace:nn     {glyph} }

% Define the different messages that may be sent.
\msg_new:nnnn{glyph}{font-prefix-mismatch}
    {Number~of~fonts~and~prefixes~must~be~equal}
    {
        Each~font~specified~must~have~its~own~unique~prefix~
        defined~as~well.
    }
\msg_new:nnnn{glyph}{engine-not-supported}
    {Document~engine~not~supported}
    {
        The~glyph~package~only~supports~Xe[La]TeX~currently.\\\\
        You~must~change~your~typesetting~engine~to,~e.g.,~"xetex",~or~
        "xelatex"~intead~of~"latex~,~"pdflatex",~or~"luatex"~to~continue.
    }
\msg_new:nnnn{glyph}{glyph-not-found} % TODO: Fix glyphtable command.
    {Could~not~find~requested~glyph~(#1)}
    {
        The~glyph~"#1"~wasn't~found.~
        Check~that~the~name~of~the~glyph~is~correct.~
        % A~table~of~all~glyphs~can~be~generated~using~the~\\glyphtable{#2}~command.
    }
\msg_new:nnnn{glyph}{font-not-found}
    {Could~not~find~font~(#1)}
    {
        The~specified~font~(#1)~was~not~found~on~the~system.~
        Make~sure~it~is~installed~and~that~you're~passing~in~the~correct~arguments~to~glyph.
    }
\msg_new:nnn{glyph}{font-found}{Found~font~"#1"}
